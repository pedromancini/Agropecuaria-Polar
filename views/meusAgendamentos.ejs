<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meus Agendamentos - Agropecu√°ria Polar</title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/GLOBAL.css" />
    <link rel="stylesheet" href="/css/meusagendamentos.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon" />

    <script src="/js/dropdown-menu.js" defer></script>
    <script src="/js/meusAgendamentos.js" defer></script>
  </head>
  <body>
    <%- include("partials/header.ejs") %>
     <%- include("partials/navbarMenu.ejs") %>

    <div class="container">
      <div class="page-header">
        <h1 class="page-title"><span>üìÖ</span> Meus Agendamentos</h1>
        <a href="/agendamento" class="btn-novo-agendamento"
          >+ Novo Agendamento</a
        >
      </div>

      <div class="info-agropecuaria">
        <div class="info-card-agro">
          <h3>üìç Local de Atendimento</h3>
          <div class="endereco-content">
            <div class="endereco-item">
              <span class="endereco-icon">üè¢</span>
              <div>
                <strong>Agropecu√°ria Polar</strong>
                <p>Av. Brasil, 486 - Centro</p>
                <p>Vargem Grande do Sul - SP, 13880-000</p>
              </div>
            </div>

            <div class="endereco-item">
              <span class="endereco-icon">üìû</span>
              <div>
                <strong>Telefone:</strong>
                <p><a href="tel:+5501936413836">(019) 3641-3836</a></p>
              </div>
            </div>

            <div class="endereco-item">
              <span class="endereco-icon">‚è∞</span>
              <div>
                <strong>Hor√°rio de Funcionamento:</strong>
                <p>Segunda a Sexta: 07:00 - 19:00</p>
                <p>S√°bado: 07:00 - 19:00</p>
              </div>
            </div>

            <div class="endereco-actions">
              <a
                href="https://maps.app.goo.gl/83ub27FaZBdW2X5M7"
                target="_blank"
                class="btn-mapa"
              >
                üìç Ver no Mapa
              </a>
            </div>
          </div>
        </div>
      </div>

      <% if (servicos && servicos.length > 0) { %>
      <!-- Filtros -->
      <div class="filtros-container">
        <button class="filtro-btn active" data-filtro="todos">Todos</button>
        <button class="filtro-btn" data-filtro="Pendente">Pendentes</button>
        <button class="filtro-btn" data-filtro="Confirmado">Confirmados</button>
        <button class="filtro-btn" data-filtro="Conclu√≠do">Conclu√≠dos</button>
        <button class="filtro-btn" data-filtro="Cancelado">Cancelados</button>
      </div>

      <div class="agendamentos-grid">
        <% servicos.forEach(servico => { const dataAgendamento = new
        Date(servico.DataAgendamento); const dataFormatada =
        dataAgendamento.toLocaleDateString('pt-BR'); const statusClass =
        servico.Status.toLowerCase(); const isPastDate = dataAgendamento < new
        Date(); const canCancel = servico.Status === 'Pendente' && !isPastDate;
        %>
        <div class="agendamento-card" data-status="<%= servico.Status %>">
          <div class="status-badge status-<%= statusClass %>">
            <%= servico.Status %>
          </div>

          <div class="card-header">
            <div class="pet-info-compact">
              <div class="pet-icon-small">
                <% if (servico.PET.Imagem) { %>
                <img
                  src="/uploads/pets/<%= servico.PET.Imagem %>"
                  alt="<%= servico.PET.Nome %>"
                  class="pet-icon-small"
                />
                <% } else { %>
                <div class="pet-icon-small">
                  <%= servico.PET.Tipo === 'Cachorro' ? 'üê∂' : servico.PET.Tipo
                  === 'Gato' ? 'üê±' : 'üêæ' %>
                </div>
                <% } %>
              </div>
              <div>
                <h3><%= servico.PET.Nome %></h3>
                <p class="pet-detalhes">
                  <%= servico.PET.Tipo %> ‚Ä¢ <%= servico.PET.Porte %>
                </p>
              </div>
            </div>
          </div>

          <div class="card-content">
            <!-- Data e Hora -->
            <div class="agendamento-info">
              <div class="info-row">
                <span class="info-label">üìÖ Data:</span>
                <span class="info-value"><%= dataFormatada %></span>
              </div>
              <div class="info-row">
                <span class="info-label">‚è∞ Hor√°rio:</span>
                <span class="info-value"
                  ><%= servico.HorarioAgendamento %></span
                >
              </div>
            </div>

            <!-- Servi√ßos -->
            <div class="servicos-lista">
              <h4>Servi√ßos:</h4>
              <ul>
                <% servico.PRODUTOS.forEach(produto => { %>
                <li>
                  <span><%= produto.Nome %></span>
                  <span class="servico-valor"
                    >R$ <%= produto.Valor.toFixed(2).replace('.', ',') %></span
                  >
                </li>
                <% }) %>
              </ul>
            </div>

            <!-- Valor Total -->
            <div class="valor-total">
              <span>Total:</span>
              <span class="valor"
                >R$ <%= servico.ValorTotal.toFixed(2).replace('.', ',') %></span
              >
            </div>

            <!-- Observa√ß√µes (se houver) -->
            <% if (servico.Observacoes) { %>
            <div class="observacoes">
              <strong>üìù Observa√ß√µes:</strong>
              <p><%= servico.Observacoes %></p>
            </div>
            <% } %>
          </div>

          <div class="card-actions">
            <% if (canCancel) { %>
            <button
              class="btn-cancelar"
              onclick="cancelarAgendamento(<%= servico.id %>)"
            >
              ‚ùå Cancelar Agendamento
            </button>
            <% } else if (servico.Status === 'Cancelado') { %>
            <span class="info-cancelado">Este agendamento foi cancelado</span>
            <% } else if (servico.Status === 'Conclu√≠do') { %>
            <span class="info-concluido">‚úÖ Servi√ßo conclu√≠do</span>
            <% } else if (isPastDate) { %>
            <span class="info-passado">Este agendamento j√° passou</span>
            <% } %>
          </div>
        </div>
        <% }) %>
      </div>

      <% } else { %>
      <div class="empty-state">
        <span class="empty-icon">üìÖ</span>
        <h3>Nenhum agendamento encontrado</h3>
        <p>Voc√™ ainda n√£o realizou nenhum agendamento.</p>
        <a href="/agendamento" class="btn-novo-agendamento">
          + Fazer Primeiro Agendamento
        </a>
      </div>
      <% } %>
    </div>

    <%- include("partials/footerCopy.ejs") %>
  </body>
</html>
