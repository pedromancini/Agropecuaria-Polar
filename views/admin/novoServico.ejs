<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novo Servi√ßo - Admin</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/GLOBAL.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/header.css">

    <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon" />
</head>
<body>
    <%- include("../partials/header.ejs") %>

    <div class="form-container">
        <div class="form-card">
            <div class="form-header">
                <a href="/admin" class="btn-secondary" style="margin-bottom: 20px; display: inline-block; margin-right: auto; margin-right: 100%; width: 70px;">‚Üê Voltar</a>
                <h1>‚ûï Cadastrar Novo Servi√ßo</h1>
                <p>Preencha os dados do servi√ßo que ser√° oferecido aos clientes</p>
            </div>

            <form id="formNovoServico">
                <!-- Nome do Servi√ßo -->
                <div class="form-group">
                    <label for="nome">
                        <span class="label-text">Nome do Servi√ßo</span>
                        <span class="label-required">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="nome" 
                        name="nome" 
                        required 
                        placeholder="Ex: Banho e Tosa Completo"
                        maxlength="100"
                        class="form-input">
                </div>

                <!-- Valor e Dura√ß√£o -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="valor">
                            <span class="label-text">üí∞ Valor (R$)</span>
                            <span class="label-required">*</span>
                        </label>
                        <input 
                            type="number" 
                            id="valor" 
                            name="valor" 
                            step="0.01" 
                            min="0" 
                            required 
                            placeholder="0,00"
                            class="form-input">
                    </div>

                    <div class="form-group">
                        <label for="duracaoMinutos">
                            <span class="label-text">‚è±Ô∏è Dura√ß√£o (min)</span>
                            <span class="label-required">*</span>
                        </label>
                        <select id="duracaoMinutos" name="duracaoMinutos" required class="form-input">
                            <option value="">Selecione...</option>
                            <option value="15">15 minutos</option>
                            <option value="30">30 minutos</option>
                            <option value="45">45 minutos</option>
                            <option value="60" selected>1 hora</option>
                            <option value="90">1h 30min</option>
                            <option value="120">2 horas</option>
                            <option value="150">2h 30min</option>
                            <option value="180">3 horas</option>
                        </select>
                    </div>
                </div>

                <!-- Descri√ß√£o -->
                <div class="form-group">
                    <label for="descricao">
                        <span class="label-text">üìù Descri√ß√£o</span>
                        <span class="label-required">*</span>
                    </label>
                    <textarea 
                        id="descricao" 
                        name="descricao" 
                        rows="5" 
                        required 
                        placeholder="Descreva detalhadamente o que est√° inclu√≠do neste servi√ßo..."
                        maxlength="500"
                        class="form-input"></textarea>
                    <small id="charCount" class="char-counter">0/500 caracteres</small>
                </div>

                <!-- Status Ativo -->
                <div class="form-group">
                    <div class="checkbox-container">
                        <label class="checkbox-label">
                            <input type="checkbox" id="ativo" name="ativo" checked>
                            <span class="checkbox-text">
                                <strong>‚úÖ Servi√ßo Ativo</strong>
                                <small>Quando ativo, o servi√ßo ficar√° dispon√≠vel para os clientes agendarem</small>
                            </span>
                        </label>
                    </div>
                </div>

                <!-- Bot√µes -->
                <div class="form-actions">
                    <button type="button" class="btn-secondary" onclick="window.location.href='/admin'">
                        ‚úñÔ∏è Cancelar
                    </button>
                    <button type="submit" class="btn-primary" id="btnSalvar">
                        üíæ Salvar Servi√ßo
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>

        const descricao = document.getElementById('descricao');
        const charCount = document.getElementById('charCount');

        descricao.addEventListener('input', () => {
            const length = descricao.value.length;
            charCount.textContent = `${length}/500 caracteres`;
            
            if (length > 450) {
                charCount.style.color = '#e74c3c';
            } else {
                charCount.style.color = '#7f8c8d';
            }
        });

        const valorInput = document.getElementById('valor');
        valorInput.addEventListener('blur', function() {
            if (this.value) {
                this.value = parseFloat(this.value).toFixed(2);
            }
        });

        document.getElementById('formNovoServico').addEventListener('submit', async (e) => {
            e.preventDefault();

            const btnSalvar = document.getElementById('btnSalvar');
            btnSalvar.disabled = true;
            btnSalvar.innerHTML = '‚è≥ Salvando...';

            const formData = {
                nome: document.getElementById('nome').value.trim(),
                valor: document.getElementById('valor').value,
                duracaoMinutos: document.getElementById('duracaoMinutos').value,
                descricao: document.getElementById('descricao').value.trim(),
                ativo: document.getElementById('ativo').checked
            };


            if (!formData.nome || !formData.valor || !formData.duracaoMinutos || !formData.descricao) {
                alert('‚ùå Por favor, preencha todos os campos obrigat√≥rios!');
                btnSalvar.disabled = false;
                btnSalvar.innerHTML = 'üíæ Salvar Servi√ßo';
                return;
            }

            if (parseFloat(formData.valor) <= 0) {
                alert('‚ùå O valor deve ser maior que zero!');
                btnSalvar.disabled = false;
                btnSalvar.innerHTML = 'üíæ Salvar Servi√ßo';
                return;
            }

            try {
                const response = await fetch('/admin/servicos/criar', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (data.sucesso) {
                    alert('‚úÖ ' + data.mensagem);
                    window.location.href = '/admin';
                } else {
                    alert('‚ùå ' + (data.erro || 'Erro ao cadastrar servi√ßo'));
                    btnSalvar.disabled = false;
                    btnSalvar.innerHTML = 'üíæ Salvar Servi√ßo';
                }
            } catch (error) {
                console.error(error);
                alert('‚ùå Erro ao processar requisi√ß√£o. Tente novamente.');
                btnSalvar.disabled = false;
                btnSalvar.innerHTML = 'üíæ Salvar Servi√ßo';
            }
        });
    </script>
</body>
</html>