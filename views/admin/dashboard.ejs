<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Painel Admin - Gerenciar Servi√ßos</title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/GLOBAL.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/navbar.css" />

    <script src="/js/admin.js" defer></script>
  </head>
  <body>
    <%- include("../partials/header.ejs") %>

    <div class="admin-container">
      <div class="admin-header">
        <div class="admin-header-left">
          <h1>üõ†Ô∏è Painel Administrativo</h1>
          <p>Gerencie os servi√ßos dispon√≠veis para agendamento</p>
        </div>
        <div class="admin-header-actions">
          <a href="/admin/agendamentos" class="btn-primary"
            >üìÖ Ver Agendamentos</a
          >
          <a href="/admin/servicos/novo" class="btn-primary">+ Novo Servi√ßo</a>
          <a href="/" class="btn-secondary">‚Üê Voltar para Home</a>
        </div>
      </div>

      <!-- Estat√≠sticas R√°pidas -->
      <div class="stats-grid">
        <div class="stat-card stat-card-purple">
          <span class="stat-icon">üìä</span>
          <div>
            <h3><%= produtos.length %></h3>
            <p>Total de Servi√ßos</p>
          </div>
        </div>
        <div class="stat-card stat-card-green">
          <span class="stat-icon">‚úÖ</span>
          <div>
            <h3><%= produtos.filter(p => p.Ativo).length %></h3>
            <p>Servi√ßos Ativos</p>
          </div>
        </div>
        <div class="stat-card stat-card-red">
          <span class="stat-icon">‚ùå</span>
          <div>
            <h3><%= produtos.filter(p => !p.Ativo).length %></h3>
            <p>Servi√ßos Inativos</p>
          </div>
        </div>
      </div>

      <!-- Tabela de Servi√ßos -->
      <div class="servicos-table-container">
        <div class="table-header">
          <h2>üìã Lista de Servi√ßos</h2>
        </div>

        <% if (produtos.length === 0) { %>
        <div class="empty-state">
          <span class="empty-icon">üì¶</span>
          <h3>Nenhum servi√ßo cadastrado</h3>
          <p>Comece adicionando seu primeiro servi√ßo!</p>
          <a href="/admin/servicos/novo" class="btn-primary"
            >+ Criar Primeiro Servi√ßo</a
          >
        </div>
        <% } else { %>
        <table class="servicos-table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Descri√ß√£o</th>
              <th>Valor</th>
              <th>Dura√ß√£o</th>
              <th>Status</th>
              <th>A√ß√µes</th>
            </tr>
          </thead>
          <tbody>
            <% produtos.forEach(produto => { %>
            <tr
              data-produto-id="<%= produto.id %>"
              class="<%= produto.Ativo ? '' : 'servico-inativo' %>"
            >
              <td><strong><%= produto.Nome %></strong></td>
              <td class="descricao-cell">
                <%= produto.Descricao.length > 80 ?
                produto.Descricao.substring(0, 80) + '...' : produto.Descricao
                %>
              </td>
              <td class="valor-cell">
                R$ <%= produto.Valor.toFixed(2).replace('.', ',') %>
              </td>
              <td class="duracao-cell"><%= produto.DuracaoMinutos %> min</td>
              <td>
                <span
                  class="badge <%= produto.Ativo ? 'badge-success' : 'badge-danger' %>"
                >
                  <%= produto.Ativo ? '‚úì Ativo' : '‚úó Inativo' %>
                </span>
              </td>
              <td class="acoes-cell">
                <button
                  class="btn-action btn-toggle"
                  onclick="toggleStatus(<%= produto.id %>)"
                  title="<%= produto.Ativo ? 'Desativar' : 'Ativar' %>"
                >
                  <%= produto.Ativo ? 'Desativar' : 'Ativar' %>
                </button>
                <a
                  href="/admin/servicos/editar/<%= produto.id %>"
                  class="btn-action btn-edit"
                  title="Editar"
                >
                  Editar
                </a>
                <button
                  class="btn-action btn-delete"
                  onclick="excluirServico(<%= produto.id %>)"
                  title="Excluir"
                >
                  Excluir
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </body>
</html>
