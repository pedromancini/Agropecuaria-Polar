<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Servi√ßo - Admin</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/GLOBAL.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/header.css">
</head>
<body>
    <%- include("../partials/header.ejs") %>

    <div class="form-container">
        <a href="/admin" class="btn-voltar">‚Üê Voltar ao Painel</a>

        <div class="form-card">
            <div class="form-header">
                <h1>‚úèÔ∏è Editar Servi√ßo</h1>
                <p>Atualize as informa√ß√µes do servi√ßo</p>
            </div>

            <form id="formEditarServico">
                <!-- Nome do Servi√ßo -->
                <div class="form-group">
                    <label for="nome">
                        <span class="label-text">Nome do Servi√ßo</span>
                        <span class="label-required">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="nome" 
                        name="nome" 
                        required 
                        value="<%= produto.Nome %>"
                        maxlength="100"
                        class="form-input">
                </div>

                <!-- Valor e Dura√ß√£o -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="valor">
                            <span class="label-text">üí∞ Valor (R$)</span>
                            <span class="label-required">*</span>
                        </label>
                        <input 
                            type="number" 
                            id="valor" 
                            name="valor" 
                            step="0.01" 
                            min="0" 
                            required 
                            value="<%= produto.Valor %>"
                            class="form-input">
                    </div>

                    <div class="form-group">
                        <label for="duracaoMinutos">
                            <span class="label-text">‚è±Ô∏è Dura√ß√£o (min)</span>
                            <span class="label-required">*</span>
                        </label>
                        <select id="duracaoMinutos" name="duracaoMinutos" required class="form-input">
                            <option value="15" <%= produto.DuracaoMinutos === 15 ? 'selected' : '' %>>15 minutos</option>
                            <option value="30" <%= produto.DuracaoMinutos === 30 ? 'selected' : '' %>>30 minutos</option>
                            <option value="45" <%= produto.DuracaoMinutos === 45 ? 'selected' : '' %>>45 minutos</option>
                            <option value="60" <%= produto.DuracaoMinutos === 60 ? 'selected' : '' %>>1 hora</option>
                            <option value="90" <%= produto.DuracaoMinutos === 90 ? 'selected' : '' %>>1h 30min</option>
                            <option value="120" <%= produto.DuracaoMinutos === 120 ? 'selected' : '' %>>2 horas</option>
                            <option value="150" <%= produto.DuracaoMinutos === 150 ? 'selected' : '' %>>2h 30min</option>
                            <option value="180" <%= produto.DuracaoMinutos === 180 ? 'selected' : '' %>>3 horas</option>
                        </select>
                    </div>
                </div>

                <!-- Descri√ß√£o -->
                <div class="form-group">
                    <label for="descricao">
                        <span class="label-text">üìù Descri√ß√£o</span>
                        <span class="label-required">*</span>
                    </label>
                    <textarea 
                        id="descricao" 
                        name="descricao" 
                        rows="5" 
                        required 
                        maxlength="500"
                        class="form-input"><%= produto.Descricao %></textarea>
                    <small id="charCount" class="char-counter"><%= produto.Descricao.length %>/500 caracteres</small>
                </div>

                <!-- Status Ativo -->
                <div class="form-group">
                    <div class="checkbox-container">
                        <label class="checkbox-label">
                            <input type="checkbox" id="ativo" name="ativo" <%= produto.Ativo ? 'checked' : '' %>>
                            <span class="checkbox-text">
                                <strong>‚úÖ Servi√ßo Ativo</strong>
                                <small>Quando ativo, o servi√ßo ficar√° dispon√≠vel para os clientes agendarem</small>
                            </span>
                        </label>
                    </div>
                </div>

                <!-- Info sobre altera√ß√£o -->
                <div class="info-box">
                    <span class="info-icon">‚ÑπÔ∏è</span>
                    <div class="info-text">
                        <strong>Importante:</strong> As altera√ß√µes afetar√£o apenas novos agendamentos. Agendamentos j√° realizados n√£o ser√£o modificados.
                    </div>
                </div>

                <!-- Bot√µes -->
                <div class="form-actions">
                    <button type="button" class="btn-secondary" onclick="window.location.href='/admin'">
                        ‚úñÔ∏è Cancelar
                    </button>
                    <button type="submit" class="btn-primary" id="btnSalvar">
                        üíæ Salvar Altera√ß√µes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Contador de caracteres
        const descricao = document.getElementById('descricao');
        const charCount = document.getElementById('charCount');

        descricao.addEventListener('input', () => {
            const length = descricao.value.length;
            charCount.textContent = `${length}/500 caracteres`;
            
            if (length > 450) {
                charCount.style.color = '#e74c3c';
            } else {
                charCount.style.color = '#7f8c8d';
            }
        });

        // Formatar valor em tempo real
        const valorInput = document.getElementById('valor');
        valorInput.addEventListener('blur', function() {
            if (this.value) {
                this.value = parseFloat(this.value).toFixed(2);
            }
        });

        // Submit do formul√°rio
        document.getElementById('formEditarServico').addEventListener('submit', async (e) => {
            e.preventDefault();

            const btnSalvar = document.getElementById('btnSalvar');
            btnSalvar.disabled = true;
            btnSalvar.innerHTML = '‚è≥ Salvando...';

            const formData = {
                nome: document.getElementById('nome').value.trim(),
                valor: document.getElementById('valor').value,
                duracaoMinutos: document.getElementById('duracaoMinutos').value,
                descricao: document.getElementById('descricao').value.trim(),
                ativo: document.getElementById('ativo').checked
            };

            // Valida√ß√µes
            if (!formData.nome || !formData.valor || !formData.duracaoMinutos || !formData.descricao) {
                alert('‚ùå Por favor, preencha todos os campos obrigat√≥rios!');
                btnSalvar.disabled = false;
                btnSalvar.innerHTML = 'üíæ Salvar Altera√ß√µes';
                return;
            }

            if (parseFloat(formData.valor) <= 0) {
                alert('‚ùå O valor deve ser maior que zero!');
                btnSalvar.disabled = false;
                btnSalvar.innerHTML = 'üíæ Salvar Altera√ß√µes';
                return;
            }

            try {
                const response = await fetch('/admin/servicos/atualizar/<%= produto.id %>', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (data.sucesso) {
                    alert('‚úÖ ' + data.mensagem);
                    window.location.href = '/admin';
                } else {
                    alert('‚ùå ' + (data.erro || 'Erro ao atualizar servi√ßo'));
                    btnSalvar.disabled = false;
                    btnSalvar.innerHTML = 'üíæ Salvar Altera√ß√µes';
                }
            } catch (error) {
                console.error(error);
                alert('‚ùå Erro ao processar requisi√ß√£o. Tente novamente.');
                btnSalvar.disabled = false;
                btnSalvar.innerHTML = 'üíæ Salvar Altera√ß√µes';
            }
        });
    </script>
</body>
</html>