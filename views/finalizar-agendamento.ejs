              <span class="servico-valor">R$ <%= servico.Valor.toFixed(2).replace('.', ',') %></span>
            </div>
          <% }) %>
          <div class="total-servicos">
            <strong>Total:</strong>
            <strong class="valor-total">R$ <%= valorTotal.toFixed(2).replace('.', ',') %></strong>
          </div>
        </div>
      </div>
    </div>

    <!-- Sele√ß√£o de Data e Hor√°rio -->
    <div class="agendamento-section">
