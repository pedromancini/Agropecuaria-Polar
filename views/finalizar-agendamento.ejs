        <div class="pet-info">
          <% if (pet.Imagem) { %>
            <img src="/uploads/pets/<%= pet.Imagem %>" alt="<%= pet.Nome %>" class="pet-thumb">
          <% } else { %>
            <div class="pet-thumb-icon">
